{% extends 'base.html.twig' %}

{% block title %}Articles index{% endblock %}

{% block body %}
    <h1>Articles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Reading_estimation_time</th>
                <th>Body</th>
                <th>Sub_title</th>
                <th>Introduction</th>
                <th>Title</th>
                <th>Media_reader</th>
                <th>Pictures</th>
                <th>Linked_documents</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d') : '' }}</td>
                <td>{{ article.readingEstimationTime }}</td>
                <td>{{ article.body }}</td>
                <td>{{ article.subTitle }}</td>
                <td>{{ article.introduction }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.mediaReader }}</td>
                <td>{{ article.pictures }}</td>
                <td>{{ article.linkedDocuments }}</td>
                <td>
                    <a href="{{ path('app_articles_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_articles_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_articles_new') }}">Create new</a>
{% endblock %}
